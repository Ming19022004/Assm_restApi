<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@mipmap/user1"
                android:layout_margin="10dp"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:textColor="#212322"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Welcome" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="#047C34"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text=" Healthy mart" />
            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@mipmap/search"
                android:layout_margin="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#EAE3E3"
            android:layout_height="300dp">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@mipmap/vegetables"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="All"

                    android:drawableStart="@mipmap/user1"

                    android:backgroundTint="#5CBD60"
                    />
                <Button
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="VEGATABLE"
                    android:layout_marginLeft="10dp"

                    android:backgroundTint="#C0D3C0"
                    />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="FRUID"
                    android:backgroundTint="#BFCFBF"

                    android:layout_marginLeft="10dp"

                    />
                <Button
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="MILK"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#B8D1B8"
                    />
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_margin="10dp"
            android:text="Fresh Fruirs"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:background="#D3CECE"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="250dp">
                <ImageView
                    android:id="@+id/imgOrange"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/orange1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh Orange"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 gm"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14.7"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#ABCD77"
                    android:drawableLeft="@mipmap/add2"
                    android:text="Add to Cart" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="150dp"
                android:background="#D3CECE"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/mango"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh mango"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="700 gm"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.7"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#ABCD77"
                    android:drawableLeft="@mipmap/add2"
                    android:text="Add to Cart" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_margin="10dp"
            android:text="Fresh Vegatable"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:background="#D3CECE"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/vegetable"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh Vegatable"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 gm"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13.7"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#ABCD77"
                    android:drawableLeft="@mipmap/add2"
                    android:text="Add to Cart" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:background="#D3CECE"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/vegetable1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh Vegatable"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 gm"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14.7"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#ABCD77"
                    android:drawableLeft="@mipmap/add2"
                    android:text="Add to Cart" />
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>

</ScrollView>