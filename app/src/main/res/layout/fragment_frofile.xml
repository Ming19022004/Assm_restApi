<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
  >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete your profile"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/camera1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />
    <EditText

        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Nhập vào fullname"
        android:drawableStart="@drawable/ic_people"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/edUsrer"
        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="    Nhập vào old"

        android:layout_marginTop="20dp"
        />
    <EditText

        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="    DD/MM/YYY"

        android:layout_marginTop="20dp"
        />
    <EditText

        android:background="@drawable/custom_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="   (+84) XXXXXXXX "
        android:drawableStart="@mipmap/vietnam3"

        android:layout_marginTop="20dp"

        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"
        android:text="Complete your profile"
        android:background="@drawable/rounded_button"

        android:textColor="#F1EFEF"

        android:layout_marginTop="40dp"
        android:textSize="22sp"/>
</LinearLayout>